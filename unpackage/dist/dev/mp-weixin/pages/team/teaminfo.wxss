
.infoHead.data-v-42032e6b {
	padding: 20rpx;
	background-color: #ffffff;
	margin-bottom: 20rpx;
	border-radius: 10rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}
.teamName.data-v-42032e6b {
	font-size: 32rpx;
	font-weight: bold;
	margin-bottom: 10rpx;
}

/* 团队成员容器 */
.teamMembers.data-v-42032e6b {
	display: flex;
	align-items: center;
	gap: 10rpx;
	margin: 10px;
	overflow-x: auto; /* 横向滚动条 */
	padding-bottom: 10rpx; /* 给滚动条留出空间 */
	position: relative; /* 确保加号按钮相对定位 */
}
.teamMember.data-v-42032e6b {
	flex-shrink: 0; /* 防止成员头像被压缩 */
	width: 80rpx;
	height: 80rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 50%;
	background-color: #f5f5f5;
	box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}
.teamMember img.data-v-42032e6b {
	width: 100%;
	height: 100%;
	border-radius: 50%;
	object-fit: cover;
}

/* 邀请成员按钮样式 */
.addMember.data-v-42032e6b {
	position: -webkit-sticky;
	position: sticky; /* 固定在容器的右侧 */
	right: 0; /* 距离容器右侧 0 */
	width: 80rpx;
	height: 80rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 50%;
	background-color: #007aff;
	color: #ffffff;
	font-size: 40rpx;
	font-weight: bold;
	cursor: pointer;
	box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}
/* 顶部导航栏 */
.tabHeader.data-v-42032e6b {
	display: flex;
	background-color: #f9f9f9;
	border-bottom: 1rpx solid #eeeeee;
}
.tabItem.data-v-42032e6b {
	flex: 1;
	text-align: center;
	padding: 20rpx 0;
	font-size: 28rpx;
	color: #666666;
	cursor: pointer;
}
.tabItem.active.data-v-42032e6b {
	color: #007aff;
	font-weight: bold;
	border-bottom: 2rpx solid #007aff;
}

/* 内容区域 */
.tabContent.data-v-42032e6b {
	padding: 20rpx;
}
.taskList.data-v-42032e6b,
.resourceList.data-v-42032e6b,
.announcementList.data-v-42032e6b {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}
.taskItem.data-v-42032e6b,
.resourceItem.data-v-42032e6b,
.announcementItem.data-v-42032e6b {
	padding: 20rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
	box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
	display: flex;
	flex-direction: column; /* 确保内容按列排列 */
}

/* 标题独占一行 */
.taskTitle.data-v-42032e6b,
.resourceName.data-v-42032e6b,
.announcementTitle.data-v-42032e6b {
	font-size: 28rpx;
	font-weight: bold;
	margin-bottom: 10rpx; /* 与下方内容的间距 */
	word-break: break-word; /* 防止长标题溢出 */
}

/* 剩余内容换行显示 */
.taskInfo.data-v-42032e6b,
.resourceInfo.data-v-42032e6b,
.announcementContent.data-v-42032e6b,
.announcementDate.data-v-42032e6b {
	font-size: 24rpx;
	color: #666666;
	line-height: 1.5; /* 增加行高，提升可读性 */
	word-break: break-word; /* 防止内容溢出 */
}
